<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/positionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/catImageView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_toEndOf="@+id/catImageView"
        android:layout_toRightOf="@+id/catImageView"
        android:text="1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/catImageView"
        android:layout_alignEnd="@+id/positionTextView"
        android:layout_alignLeft="@+id/positionTextView"
        android:layout_alignRight="@+id/positionTextView"
        android:layout_alignStart="@+id/positionTextView"
        android:layout_below="@+id/positionTextView"
        android:layout_marginTop="8dp"
        android:text="title text" />
</RelativeLayout>